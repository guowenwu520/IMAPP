<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="20dp"
    android:background="#fff"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/tp"
        android:layout_height="55dp"
        android:layout_width="match_parent">
        <ImageView
            android:id="@+id/head_user"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/user_name"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@id/head_user"
            android:layout_toRightOf="@id/head_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/times"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/textmsg"
        android:layout_below="@id/tp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="4dp"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></TextView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclke_img"
        android:layout_below="@id/textmsg"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></android.support.v7.widget.RecyclerView>
  <ImageView
      android:id="@+id/dianzan"
      android:src="@drawable/dianzan"
      android:layout_marginRight="40dp"
      android:layout_toLeftOf="@id/inputedit"
      android:layout_marginLeft="40dp"
      android:layout_below="@id/recyclke_img"
      android:layout_marginTop="10dp"
      android:layout_width="20dp"
      android:layout_height="20dp" />
    <ImageView
        android:id="@+id/inputedit"
         android:layout_alignParentRight="true"
        android:background="@drawable/pinglun"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/recyclke_img"
        android:layout_width="20dp"
        android:layout_height="20dp" />
        <TextView
        android:id="@+id/dianzanshow"
        android:paddingLeft="50dp"
        android:paddingRight="60dp"
            android:textColor="#0afcf8"
        android:layout_below="@id/inputedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclke_plung"
        android:layout_below="@id/dianzanshow"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></android.support.v7.widget.RecyclerView>
</RelativeLayout>