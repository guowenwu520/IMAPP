<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cunt_lasy"
    android:background="#f7b14f"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_item_view"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/boount" android:layout_below="@id/recycle_item_view"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <EditText
            android:background="@drawable/edit_view2"
            android:id="@+id/editmsg"
            android:layout_width="250dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/send"
            android:background="@drawable/em_button_bg"
            android:text="发表"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/editmsg"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="40dp" />
    </RelativeLayout>
</RelativeLayout>